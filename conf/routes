# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/								controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file					controllers.Assets.versioned(path="/public", file: Asset)

# API
GET		/motioner/timeline/search		controllers.Application.getMotionerTimelineSearch(searchPhrase: String)
GET		/motioner/timeline/total		controllers.Application.getMotionerTimelineTotal()

#GET	/motioner/scroll				controllers.Application.getMotionerHitScroll(scrollId: String)